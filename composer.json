{
    "name": "roach-php/laravel",
    "description": "Laravel adapter for roach-php/core",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kai Sassnowski",
            "email": "me@kai-sassnowski.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
        "laravel/framework": "^10.0 || ^11.0",
        "roach-php/core": "^2.0 || ^3.0 || dev-main",
        "spatie/laravel-package-tools": "^1.11"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.15",
        "ergebnis/php-cs-fixer-config": "^6.19",
        "orchestra/testbench": "^7.0 || ^8.0 || ^9.0",
        "phpunit/phpunit": "^10.4",
        "roave/security-advisories": "dev-latest",
        "spatie/phpunit-snapshot-assertions": "^5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "RoachPHP\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoachPHP\\Laravel\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RoachPHP\\Laravel\\RoachServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ],
        "coding-standards": [
            "mkdir -p .build/php-cs-fixer",
            "php-cs-fixer fix --diff --verbose"
        ]
    }
}
